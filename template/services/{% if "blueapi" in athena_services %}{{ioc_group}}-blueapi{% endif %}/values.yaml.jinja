blueapi:
  hostNetwork: true
  resources:
    limits:
      cpu: 1000m
      memory: 500Mi
    requests:
      cpu: 500m
      memory: 100Mi
  ingress:
    create: true
    host: {{ ioc_group }}-blueapi.diamond.ac.uk
  
  worker:
    env:
      metadata:
         instrument: {{ ioc_group }}
         instrument_session: cm40635-3
      sources:
      - kind: dodal
        module: dodal.beamlines.{{ ioc_group }}
      - kind: planFunctions
        module: dodal.plans
      # - kind: planFunctions
      #   module: {{ ioc_group }}_bluesky.plans
      # - kind: planFunctions
      #   module: {{ ioc_group }}_bluesky.stubs
      events:
        broadcast_status_events: False
    stomp:
      auth:
        username: guest
        password: guest
      host: {{ ioc_group }}-rabbitmq
      enabled: true
    oidc:
      well_known_url: "https://authn.diamond.ac.uk/realms/master/.well-known/openid-configuration"
      client_id: "blueapi-cli"
    scratch:
      root: /dls_sw/{{ ioc_group }}/software/blueapi/scratch
      repositories:
        - name: dodal
          remote_url: https://github.com/DiamondLightSource/dodal.git
  initContainer:
    enabled: true
